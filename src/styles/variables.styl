    --Brown-Medium      #8d6e63
    --Brown-Dark        #5f4339
    --BlueGrey-Light    #a7c0cd
    --BlueGrey-Medium   #78909c
    --BlueGrey-Dark     #4b636e
    // Colors: Status
    --ColorError   var(--Red-Medium)
    --ColorSuccess var(--Blue-Medium)
    --ColorWarning var(--Orange-Medium)
    // Text/Icons: Opacity
    --OpacityPri .9
    --OpacitySec .5
    --OpacityTri .35
    // Colors: Text
    --ColorTextPri rgba(black, .9)
    --ColorTextSec rgba(black, .7)
    --ColorTextTri rgba(black, .5)
    // Colors: Icons
    --ColorIconPri rgba(black, .8)
    --ColorIconSec rgba(black, .6)
    --ColorIconTri rgba(black, .4)
    // FONTS
    // Font Family
    --FontFamily     'Titillium Web', sans-serif
    --FontFamilyMono 'Overpass Mono', monospace
    --FontFamilyIcon 'Material Icons Two Tone'
    // Line Height Correction
    --LHC -1px
    // Icon Space from Image Border
    --IconSpace 2px
    // Font Weight
    --FW_Light 400
    --FW_Bold  600
    --FW_Mono  400
    // Font Size
    --FZ_Text      14px
    --FZ_Button    15px
    --FZ_Heading   24px
    --FZ_Headline  20px
    --FZ_Caption   12px
    --FZ_Display   32px
    --FZ_IconSmall 20px
    --FZ_Icon      24px
    --FZ_IconLarge 32px
    // IDENTITY
    // Accent
    --ColorAccent            var(--Blue-Medium)
    --ColorAccentIcon        var(--Blue-Dark)
    --ColorAccentText        var(--Blue-Dark)
    --ColorTextOnAccent      var(--Grey000)
    --ColorIconOnAccent      var(--Grey100)
    // Background Shading
    --ColorBGLight rgba(white, .7)
    --ColorBG      rgba(white, .5)
    --ColorBGDark  rgba(white, .3)
    // Acrylic
    --AcrylicBlur 8px
    // Dots
    --ColorDot       var(--Grey400)
    --ColorDotDark   var(--Grey600)
    --ColorDotActive var(--ColorAccentIcon)
    // Shadows
    --Shadow       inset 0 0 0 2px rgba(white, .1)
    --ShadowRaised inset 0 0 0 2px rgba(white, .2)
    --ShadowText   var(--Shadow)
    // Radius
    --Radius      12px
    --RadiusBig   999px
    --RadiusSmall 6px
    // Borders & Dividers
    --WidthBorder 2px
    --ColorBorder rgba(black, .2)
    // ANIMATIONS
    // Transitions
    --TimeTrans     .2s
    --TimeTransLong .4s
    // SIZE & SCALE
    --SizeBase 8px
    // Blocks
    --SizeBlock      calc(8 * var(--SizeBase))
    --SizeBlockSmall calc(4 * var(--SizeBase))
    --SizeField      calc(1.125 * var(--SizeBlock))
    // Dots
    --SizeDot var(--SizeBase)
    // Spacing
    --SpacingSmall calc(0.75 * var(--SizeBase))
    --Spacing      calc(1.5 * var(--SizeBase))
    --SpacingLarge calc(3 * var(--SizeBase))
    --SpacingText  calc(0.5 * var(--SizeBase))
    // Elements
    --SizeElemS calc(2 * var(--SizeBlock) + var(--SpacingLarge))
    --SizeElemM calc(32 * var(--SizeBase))
    --SizeElemL calc(48 * var(--SizeBase))
    // PAGE
    --WidthPageMax   1200px
    --WidthScrollbar calc(var(--SizeDot) + 2 * var(--SpacingSmall))
    --SizeProfileImg calc(2 * var(--SizeBlock))
    // Textarea
    --HeightTextarea      calc(2 * (var(--SizeBlock) + var(--Spacing)) - var(--Spacing))
    --HeightTextareaLarge calc(3 * (var(--SizeBlock) + var(--Spacing)) - var(--Spacing))
    // Modals
    --WidthModal calc(var(--SizeElemM) + 2 * var(--SpacingLarge))


