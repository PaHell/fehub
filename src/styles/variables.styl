    --Green-Light       #98ee99
    --Green-Medium      #66bb6a
    --Green-Dark        #338a3e
    --LightGreen-Light  #cfff95
    --LightGreen-Medium #9ccc65
    --LightGreen-Dark   #6b9b37
    --Lime-Light        #ffff89
    --Lime-Medium       #d3e057
    --Lime-Dark         #9fae22
    --Yellow-Light      #ffff8b
    --Yellow-Medium     #ffee58
    --Yellow-Dark       #c9bc1f
    --Amber-Light       #fffd61
    --Amber-Medium      #ffca28
