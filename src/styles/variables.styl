// Radius
$Radius      = 12px
$RadiusBig   = 999px
$RadiusSmall = 6px
// Borders & Dividers
$WidthBorder = 2px
$ColorBorder = $Grey300

// ANIMATIONS
// Transitions
$TimeTrans     = .2s
$TimeTransLong = .4s

// SIZE & SCALE
$SizeBase = 8px
// Blocks
$SizeBlock      = 8 * $SizeBase
$SizeBlockSmall = 4 * $SizeBase
$SizeField      = 1.125 * $SizeBlock
// Elements
$SizeElemMin = 24 * $SizeBase
$SizeElem    = 32 * $SizeBase
$SizeElemMax = 48 * $SizeBase
// Dots
$SizeDot = $SizeBase
// Spacing
$SpacingSmall = 0.75 * $SizeBase
$Spacing      = 1.5 * $SizeBase
$SpacingLarge = 3 * $SizeBase
$SpacingText  = 0.5 * $SizeBase

// PAGE
$WidthPageMax   = 1200px
$WidthScrollbar = ($SizeDot + 2 * $SpacingSmall)
$SizeProfileImg = 2 * $SizeBlock
// Textarea
$HeightTextarea      = 2 * ($SizeBlock + $Spacing) - $Spacing
$HeightTextareaLarge = 3 * ($SizeBlock + $Spacing) - $Spacing
// Modals
$WidthModal = $SizeElemMax + 2 * $SpacingLarge