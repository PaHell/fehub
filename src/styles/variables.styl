// VARIABLES
// Colors: Greys
$Grey000 = #FFFFFF
$Grey050 = #FAFAFA
$Grey100 = #F5F5F5
$Grey200 = #EEEEEE
$Grey250 = #E7E7E7
$Grey300 = #E0E0E0
$Grey400 = #BDBDBD
$Grey500 = #9E9E9E
$Grey600 = #757575
$Grey700 = #616161
$Grey800 = #424242
$Grey850 = #303030
$Grey900 = #212121
$Grey950 = #000000
// Colors: Palette
$Yellow      = #f9A11d // Crayola Bright Yello
$OrangeLight = #fbc559
$Orange      = #FFAF18
$Red         = #ff3b30 // Coral Red
$Blue        = #1EA7C9
$BlueLight   = #3CC0DC
$BlueDark    = #245A62
$Green       = #97C664
$GreenLight  = #93f29e
$Purple      = #6218dd // Han Purple
$Brown       = #a36913 // Golden Brown
// Colors: Status
$ColorError   = $Red
$ColorSuccess = $Blue
$ColorWarning = $Yellow
// Text/Icons: Opacity
$OpacityBlackPri = .9
$OpacityBlackSec = .5
$OpacityBlackTri = .35
$OpacityWhitePri = 1
$OpacityWhiteSec = .7
$OpacityWhiteTri = .5
// Colors: Text
$ColorBlackTextPri = $Grey900
$ColorBlackTextSec = $Grey700
$ColorBlackTextTri = $Grey500
$ColorWhiteTextPri = rgba($Grey000, $OpacityWhitePri)
$ColorWhiteTextSec = rgba($Grey000, $OpacityWhiteSec)
$ColorWhiteTextTri = rgba($Grey000, $OpacityWhiteTri)
// Colors: Icons
$ColorIconPri = $Grey600
$ColorIconSec = $Grey500
$ColorIconTri = $Grey400
$ColorIconOnAccent = $ColorWhiteTextPri

// FONTS
// Font Family
$FontFamily     = 'Titillium Web', sans-serif
$FontFamilyMono = 'Overpass Mono', monospace
$FontFamilyIcon = 'Material Icons Two Tone'
// Line Height Correction
$LHC = -1px
// Icon Space from Image Border
$IconSpace = 2px
// Font Weight
$FW_Light = 400
$FW_Bold  = 600
$FW_Mono  = 400
// Font Size
$FZ_Text      = 14px
$FZ_Button    = 15px
$FZ_Heading   = 24px
$FZ_Headline  = 20px
$FZ_Caption   = 12px
$FZ_Display   = 32px
$FZ_IconSmall = 20px
$FZ_Icon      = 24px
$FZ_IconLarge = 32px

ellipsis()
    overflow      hidden
    white-space   nowrap
    text-overflow ellipsis

// IDENTITY
// Accent
$ColorAccent            = $BlueLight
$ColorAccentIcon        = $Blue
$ColorAccentText        = $BlueDark
$ColorTextOnAccent      = $ColorWhiteTextPri
$ColorIconOnAccent      = $ColorWhiteTextPri
$ColorAccentTranslucent = rgba($ColorAccent, .5)

// Background Shading
$ColorBGLight = $Grey000
$ColorBG      = $Grey200
$ColorBGDark  = $Grey300
// Dots
$ColorDot       = $Grey400
$ColorDotDark   = $Grey600
$ColorDotActive = $ColorAccentIcon
// Shadows
$Shadow          = 2px 2px 4px 2px $ColorBGDark, -2px -2px 4px 2px $ColorBGLight
$ShadowRaised    = 0px 0px 24px 0px $Grey400, 0px 0px 0px 0px $ColorBGLight
$ShadowText      = $Shadow
