// Normalize
*
	margin     0
	padding    0
	border     0
	outline    0
	box-shadow none
	background none
	box-sizing border-box
	appearance none

// Page
html,
body,
#svelte
	width  100%
	height 100%

html
	&::-webkit-scrollbar
		width            var(--WidthScrollbar)
		background-color var(--ColorBGLight)
	&::-webkit-scrollbar-track
		background-color var(--ColorBGLight)
	&::-webkit-scrollbar-thumb
		background-color var(--ColorBorder)
		border-radius    var(--Radius)
		border           var(--SpacingSmall) solid var(--ColorBGLight)
		transition       background-color var(--TimeTrans)
		&:hover
			background-color var(--ColorAccentTranslucent)
		&:active
			background-color var(--ColorAccent)
	&::-webkit-scrollbar-button

		&:single-button:vertical
			height           var(--WidthScrollbar)
			border           var(--SpacingSmall) solid var(--ColorBGLight)
			background-color var(--ColorBorder)
			border-radius    var(--Radius)
			transition       background-color var(--TimeTrans)

			&:hover
				background-color var(--ColorAccentTranslucent)

			&:active
				background-color var(--ColorAccent)
			&:decrement,
			&:increment
				//

body
	bg-texture()
	caret-color var(--ColorAccent)
	transition-timing-function linear

.hidden
	display none

// Font
body,
input,
textarea,
select,
button
	font-family var(--FontFamily)

// Interaction
a,
button
	cursor      pointer
	text-align  left

// Selection
*,
input,
textarea
	color var(--ColorTextPri)
	user-select none
	&::selection
		background-color var(--ColorAccent)
		text-shadow      0 0 1px black
		color            var(--ColorTextOnAccent)

.selectable
	user-select initial